/* pages/charge/index.wxss */
.input-box{
	background-color: #fff;
	margin: 0 auto;
	padding: 20rpx 0;
	border-radius: 10rpx;
	width: 90%;

}
.input-box input{
	width: 100%;
	height: 100%;
	text-align: center;
}

.choose_grids{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	padding: 50rpx;
}

.choose_item{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.choose_banner{
  margin-left: 50rpx;
  padding-top: 50rpx;

  display: flex;
  flex-direction: row;
  align-items: center;

  font-size: 28rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;

}

#select_charge{
  width: 29rpx;
  height: 33rpx;

  padding: 10rpx;
}

#hot_charge{
  width: 28rpx;
  height: 42rpx;
  
  padding: 10rpx;
}


.charge_image{
  width: 300rpx;
  height: 120rpx;
}

.charge_button{
  color: white;
}