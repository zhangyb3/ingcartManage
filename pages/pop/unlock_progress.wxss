
.unlock_progress_container {
    position: fixed;
    background-color: white;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    /*z-index: 11;*/
    opacity: 1;

    display: flex;
    flex-direction: column;
    align-items: center;

    font-size: 50rpx;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.cart_gif_container{
  margin-top: 80px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cart_gif{
  width: 110px;
  height: 150px;
}

#unlock_progress_percent{

  margin-top: 50rpx;
  width: 80%;
  margin-left: 10%;

}

.progress_hint{

  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 30rpx;
 
  font-size: 40rpx;
  font-weight: bold;

}