@import '../store/storeInfo.wxss';


.choose-name {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 10px;
}

.getName {
  margin: 10px auto;
  width: 50%;
  text-align: center;
  height: 60px;
  line-height: 60px;
  background-color: #ddd;
}

picker-view-column view{text-align: center;}

.chooe-time {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color:rgba(0,0,0,0.3);
}

.pick-box{
  position:absolute;width:100%;padding:20px;box-sizing:border-box;bottom:0;left:0;background-color: #fff;margin-bottom:20px;
}

.choose-btn{
  height:50px;line-height:50px;
}

.choose-btn .close{color:#f93;float:left;}
.choose-btn .sure{color:#f93;float:right;}
